{
  "version": "1.0.0",
  "name": "BugReplay Automated",
  "short_name": "BugReplay",
  "description": "Screencast and Network Debugging Tool",
  "background": {
    "page": "html/background-page.html"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/bugreplay_19.png",
      "38": "img/bugreplay_38.png"
    },
    "default_popup": "html/popup.html"
  },
  "icons": {
    "128": "img/bugreplay_128.transparent.png"
  },
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "activeTab",
    "notifications",
    "debugger",
    "tabCapture",
    "desktopCapture",
    "cookies",
    "*://*.bugreplay.com/",
    "https://storage.googleapis.com/",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["testAutomationContentScript.js"]
    }
  ]
}
